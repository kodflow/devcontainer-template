
{
  "name": "${localWorkspaceFolderBasename} Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  // Features - additional tools and runtimes
  // Languages are in ./features/languages/, Tools are in ./features/tools/
  "features": {
    // ========== FIXES ==========
    // GPG and repository cleanup (MUST run first before any apt operations)
    "./features/tools/gpg-fix": {},

    // ========== LANGUAGES ==========
    // Node.js (must be first after gpg-fix - required by claude-cli)
    "./features/languages/nodejs": {
      "version": "lts/*",
      "installYarn": true,
      "installPnpm": true,
      "globalPackages": "typescript,ts-node,eslint,prettier,vite,npm-check-updates,nodemon,pm2"
    },
    "./features/languages/carbon": {},
    "./features/languages/cpp": {},
    "./features/languages/dart-flutter": {},
    "./features/languages/elixir": {},
    "./features/languages/go": {},
    "./features/languages/java": {},
    "./features/languages/php": {},
    "./features/languages/python": {},
    "./features/languages/ruby": {},
    "./features/languages/rust": {},

    // ========== TOOLS ==========
    "./features/tools/bazel": {},
    "./features/tools/claude-cli": {},
    "./features/tools/cloud-cli": {},
    "./features/tools/hashicorp": {},
    "./features/tools/iac": {},

    // ========== EXTERNAL ==========
    // Docker support
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false,
      "installDockerBuildx": true,
      "dockerDashComposeVersion": "v2"
    }
  },
  // Initialize command runs on host BEFORE container build
  "initializeCommand": "bash ${localWorkspaceFolder}/.devcontainer/kodflow/init.sh",
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "usernamehw.errorlens", // Affichage inline des erreurs et warnings
        "vscode-icons-team.vscode-icons", // IcÃ´nes pour les fichiers et dossiers
        "redhat.vscode-yaml", // Support YAML
        "tamasfe.even-better-toml", // Support TOML
        "editorconfig.editorconfig" // EditorConfig
      ]
    }
  },
  // Post-create command (runs once after container creation)
  "postCreateCommand": "/workspace/.devcontainer/kodflow/postCreate.sh",
  // Post-start command (runs every time container starts)
  "postStartCommand": "chmod +x /workspace/.devcontainer/kodflow/*.sh 2>/dev/null || true && /workspace/.devcontainer/kodflow/setup-mcp.sh && echo 'ðŸš€ DevContainer ready!'",
  // Forward ports
  "forwardPorts": [],
  // Run as user
  "remoteUser": "vscode",
  // Shutdown action
  "shutdownAction": "none"
}
