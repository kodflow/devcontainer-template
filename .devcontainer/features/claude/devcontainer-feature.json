{
  "id": "claude",
  "version": "1.0.0",
  "name": "Claude Code Integration",
  "description": "Claude Code configuration with commands, hooks, MCP and marketplace",
  "documentationURL": "https://github.com/kodflow/devcontainer-template",
  "options": {
    "installClaude": {
      "type": "boolean",
      "default": true,
      "description": "Install Claude Code CLI"
    },
    "bundle": {
      "type": "string",
      "enum": [
        "minimal",
        "standard",
        "full"
      ],
      "default": "full",
      "description": "Configuration bundle to install"
    },
    "statusline": {
      "type": "boolean",
      "default": true,
      "description": "Enable custom statusline"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}
